



<div class="flex flex-col bg-white rounded-lg shadow-lg p-2">
    <div class="flex">
        <span class="text-gray-500">
            <%= order.id %>
        </span>
        <span data-status="<%= order.status %>"
            class="status center-xy ml-auto bg-opacity-50 rounded-lg px-3 py-[2px] uppercase font-semibold text-xs">
            <%= order.status %>
        </span>
    </div>
    <div class="flex">
        <span class="text-gray-800 font-semibold">
            <%= order.userFullName %>
        </span>
    </div>
    <div class="my-2">
        <span class="text-gray-500 font-semibold">Address: </span>
        <span class="text-gray-800">
            <%= order.userAddress %>
        </span>
    </div>
    <div class="flex flex-col mb-2">
        <span class="text-gray-800 text-lg font-semibold">
            <% let total=0 %>
            <% order.products.forEach(item=> { %>
                <% total +=item.product.price * item.quantity %>
            <% }) %>
            $<%= total %>
        </span>
    </div>

</div>